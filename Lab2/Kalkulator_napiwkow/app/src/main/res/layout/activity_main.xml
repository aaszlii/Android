<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Koszt jedzenia -->
    <EditText
        android:id="@+id/editCost"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Koszt jedzenia (zł)"
        android:inputType="numberDecimal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp" />

    <!-- Bazowy procent napiwku -->
    <EditText
        android:id="@+id/editTip"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Bazowy % napiwku (np. 5)"
        android:inputType="numberDecimal"
        app:layout_constraintTop_toBottomOf="@+id/editCost"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp" />

    <!-- Ocena obsługi -->
    <TextView
        android:id="@+id/textRatingLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ocena obsługi:"
        app:layout_constraintTop_toBottomOf="@+id/editTip"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="1"
        app:layout_constraintTop_toBottomOf="@+id/textRatingLabel"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp" />

    <!-- Czy jedzenie było smaczne -->
    <TextView
        android:id="@+id/textFood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Czy jedzenie było smaczne?"
        app:layout_constraintTop_toBottomOf="@+id/ratingBar"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp" />

    <!-- RadioGroup -->
    <RadioGroup
        android:id="@+id/foodRadioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/textFood"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp">

        <RadioButton
            android:id="@+id/radioYes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tak" />

        <RadioButton
            android:id="@+id/radioNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nie" />

        <RadioButton
            android:id="@+id/radioNeutral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nie mam zdania" />
    </RadioGroup>

    <!-- CheckBox -->
    <CheckBox
        android:id="@+id/checkHelpful"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kelner był wyjątkowo pomocny"
        app:layout_constraintTop_toBottomOf="@+id/foodRadioGroup"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp" />

    <!-- Przycisk -->
    <Button
        android:id="@+id/buttonCalculate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Policz"
        app:layout_constraintTop_toBottomOf="@+id/checkHelpful"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp" />

    <!-- Napiwek -->
    <TextView
        android:id="@+id/textTipResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Napiwek:"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/buttonCalculate"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp" />

    <!-- Suma -->
    <TextView
        android:id="@+id/textTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Suma do zapłaty:"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/textTipResult"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
